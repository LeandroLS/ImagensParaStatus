<body>
    header
        include layouts/navbar-header
    .container: .row(class="margin-top-1pct")
        .col-md-9
            .text-center(class="margin-bottom-1pct"): h1.azul-2= header
            if(images.length >= 1)
                each image in images
                    div.card(class="margin-bottom-1pct shadow"): div.card-body
                        p.blockquote
                            a(href=`/image/${image.fileName}`): img(src="/loading.gif", data-src=`/images/original-images/${image.fileName}`, alt=`${image.phrase}`, class="img-fluid lazy", title=`${image.phrase}`)
                        .row
                            .col-md-8
                                p(class="card-text" id=`frase-${image.id}`) #{image.phrase}
                            .col-md-4
                                include layouts/share-buttons.pug
                        <br>
                        <p class="card-text"> Categoria: #{image.category} </p>
            else
                div.alert.alert-warning Nenhuma imagem encontrada.
            .row.margin-top-1pct
                .offset-md-4.col-md-4
                    <nav>
                        <ul class="pagination" id="paginationBar">
                        </ul>
                    </nav>
        .col-md-3
            include layouts/categories.pug
        <a href="javascript:" class="btn btn-sm bg-azul-2 hover-white" id="backToTop" onclick="returnToTop()" title="Voltar para o topo">
            <i class="fas fa-arrow-up"></i>
        </a>
    include layouts/footer.pug
</body>

script.
    function returnToTop(){
        $('body,html').animate({
            scrollTop : 0
        }, 500);
    }
    function setPaginationTags(currentPage, neighborPage){
        if(currentPage > neighborPage){
            return "rel='prev'";
        } else if (currentPage < neighborPage) {
            return "rel='next'";
        }
    }
    function renderPaginationBar(){
        let intervalPages = 3;
        let category = "#{categoryPagination}";
        if(!category){
            category = '';
        }
        let phrase = "#{phrase}";
        if(phrase){
            phrase = '?phrase=' + phrase;
        }
        let currentPage = parseInt("#{currentPage}");
        let numberOfPages = parseInt("#{numberOfPages}");
        if(currentPage != undefined){
            var startPage = currentPage - intervalPages;
            var endPage = currentPage + intervalPages;
        }
        if(startPage <= 0) {
            endPage = endPage - (startPage - 1);
            startPage = 1;
        }
        if(endPage > numberOfPages){
            endPage = numberOfPages;
        }
        for(var iterator = startPage; iterator <= endPage; iterator++){
            let oneLessOrHigher = iterator - currentPage;
            if(oneLessOrHigher == 1 || oneLessOrHigher == -1){
                var paginationTag = setPaginationTags(currentPage, iterator);
            } else {
                var paginationTag = '';
            }
            $("#paginationBar").append(`
                <li class="page-item"> 
                    <a class="page-link" ${paginationTag} href=${category}/page/${iterator}${phrase}> ${iterator} </a>
                </li>`
            );
        }
    }
    new ClipboardJS('.copyToClipBoard');
    $(function () {
        renderPaginationBar();
        $('[data-toggle="tooltip"]').tooltip();
        $('.copyToClipBoard').on('click', function() {
            $(this).tooltip('hide');
            $(this).attr('data-original-title', 'Frase copiada! :)');
            $(this).tooltip('show');
        });
    });
</html>